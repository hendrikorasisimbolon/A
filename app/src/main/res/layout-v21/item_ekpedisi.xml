<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <LinearLayout
            android:clickable="false"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="JNE OKE "
                        android:id="@+id/txt_code"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_weight="0.3"
                        android:id="@+id/txt_ongkir"
                        android:textSize="18sp"
                        android:text="Rp. 37.000"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Estimasi waktu sampai : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/colorAccentDark"
                        android:id="@+id/txt_estimasi"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text=" hari"
                        android:textColor="@color/colorAccentDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <CheckBox
                android:id="@+id/rd_eksp"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_height="match_parent" style="@style/Widget.AppCompat.CompoundButton.CheckBox"/>

    </LinearLayout>
   <View android:layout_width="match_parent"
         android:background="@color/grey_20"
         android:layout_height="1dp"/>
</LinearLayout>