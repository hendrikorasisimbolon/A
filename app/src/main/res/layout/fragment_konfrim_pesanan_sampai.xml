<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_gravity="center"
             android:layout_height="140dp"
              android:orientation="vertical"
             android:padding="30dp"
              android:background="@drawable/btn_rounded_grey_outline"
             tools:context=".Fragment.KonfrimPesananSampaiFragment">
    <TextView
            android:text="Apakah Pesanan anda telah sampai ?"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content"
                android:text="Ya"
                android:textAllCaps="false"
                android:id="@+id/btn_ya"
                android:background="@drawable/round_success"
                android:layout_gravity="center"
                android:layout_height="30dp"/>
        <View android:layout_width="40dp" android:layout_height="0dp"/>
        <Button android:layout_width="wrap_content"
                android:text="Tidak"
                android:id="@+id/btn_tdk"
                android:textAllCaps="false"
                android:background="@drawable/round_notsucces"
                android:layout_gravity="center"
                android:layout_height="30dp"/>
    </LinearLayout>

</LinearLayout>