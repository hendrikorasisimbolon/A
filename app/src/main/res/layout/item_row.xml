<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:padding="10dp"
              android:id="@+id/peritem"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/item_foto"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/item_judul"
                  android:textSize="18sp"
                  android:layout_marginLeft="15dp"
                  android:text="Lalalalalalal"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/item_deskripsi"
                  android:textSize="12sp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="10dp"
                  android:maxLines="2"
                  android:maxLength="90"
                  android:layout_marginBottom="10dp"
                  android:layout_marginRight="15dp"
                  android:text="Lalalalaasfasgagdgadgasdgasdgasdgasdasdgasdgasdgsadgasdgasdgasdgasdglalal" android:gravity="fill"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/item_harga"
                    android:text="Rp. 5000,-"
                    android:layout_weight="1"
                    android:layout_gravity="bottom|end"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageButton android:layout_width="50dp"
                         android:layout_height="30dp"
                         android:focusableInTouchMode="true"
                         android:background="@color/colorAccentDark"
                         app:srcCompat="@drawable/ic_add_shopping"
                         android:layout_marginRight="10dp"
                         android:id="@+id/item_add_photo"
                         android:layout_gravity="bottom|end"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>