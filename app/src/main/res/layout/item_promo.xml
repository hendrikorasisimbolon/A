<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@drawable/round_step2"
              android:padding="10dp"
              android:layout_height="wrap_content" android:layout_marginTop="5dp">
    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="12sp"
                android:id="@+id/txt_diskon"
                android:text="Isi Promo"
                android:layout_height="wrap_content" android:textStyle="bold"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:text="Maksimal Pembelian : "
                    android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="Rp. 0"
                      android:id="@+id/txt_max"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0dp"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">
        <TextView android:layout_width="90dp"
                  android:background="@drawable/shape_rounded_orange"
                  android:padding="5dp"
                  android:textSize="14sp"
                  android:maxLength="8"
                  android:id="@+id/txt_kode_diskon"
                  android:textStyle="bold"
                  android:textColor="@color/mdtp_white"
                  android:text="AAAAAAAA"
                  android:layout_gravity="center_vertical"
                  android:layout_height="wrap_content" android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>