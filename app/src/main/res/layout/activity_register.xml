<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rootView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mdtp_white"
                tools:context=".RegisterAct">

    <RelativeLayout
            android:id="@+id/afterAnimationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/WelcomeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fashion Store"
                android:textSize="25sp"
                android:textStyle="bold" android:gravity="center" style="@android:style/Widget.Holo.Light.TextView"
                app:fontFamily="cursive"/>
        <ImageView
                android:id="@+id/fashionimg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@null"
                app:srcCompat="@drawable/fashion"
                android:layout_alignParentTop="false" android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true" android:layout_alignParentBottom="false"
                android:layout_marginTop="50dp"/>
        <TextView
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up now"
                android:textSize="18sp"
                android:textStyle="bold" android:gravity="center" style="@android:style/Widget.Holo.Light.TextView"
                app:fontFamily="cursive" android:layout_marginTop="120dp"/>

        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/sign">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/btn_signUp"
                    android:orientation="vertical" android:layout_marginBottom="10dp" tools:visibility="visible">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:textColor="@color/colorTextView"
                        android:textSize="15sp" android:layout_marginTop="25dp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorTextView"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="15sp" android:layout_marginTop="25dp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/usernameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Username"
                        android:textColor="@color/colorTextView"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="15sp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:textColor="@color/colorTextView"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="15sp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confrpasswordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:textColor="@color/colorTextView"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="15sp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Nomor Hp"
                        android:inputType="phone"
                        android:textColor="@color/colorTextView"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="15sp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addressEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Alamat"
                        android:inputType="text"
                        android:textColor="@color/colorTextView"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="15sp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/umurEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="YYYY/mm/dd"
                        android:onClick="clickDataPicker"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorTextView"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="15sp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etToProvince"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Provinsi"
                        android:inputType="text"
                        android:textColor="@color/colorTextView"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="15sp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etToCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:hint="Kota"
                        android:textColor="@color/colorTextView"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="15sp"/>

                <Button
                        android:id="@+id/btn_signUp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="30dp"
                        android:layout_height="55dp"
                        android:layout_above="@+id/btn_login"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_drawable"
                        android:text="Sign Up"
                        android:textAllCaps="false"
                        android:textColor="@color/title"
                        android:textSize="16sp"/>
                <TextView
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Already have an account ? LOG IN"
                        android:textColor="@color/colorTextView"
                        android:textSize="15sp"/>

            </LinearLayout>

        </ScrollView>



    </RelativeLayout>

</RelativeLayout>